<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/list_card_view"
         android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/workout_type"
                android:text="Workout Type"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/workout_amount"
                android:text="Workout amount"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/workout_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/workout_date"
                android:text="Workout date"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/workout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TableRow

                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@+id/workout_date">


                
            </TableRow>










        </RelativeLayout>








    </androidx.cardview.widget.CardView>

</LinearLayout>